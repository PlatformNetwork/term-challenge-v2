# =============================================================================
# Term Challenge Test Server Docker Image
# =============================================================================
# Multi-stage build: compiles the term-challenge-server binary and produces
# a lightweight runtime image for integration testing.
# =============================================================================

FROM rust:1.92-bookworm AS builder

RUN apt-get update \
    && apt-get install -y \
        pkg-config \
        libssl-dev \
        protobuf-compiler \
        cmake \
        clang \
        libclang-dev \
        lld \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY Cargo.toml Cargo.lock ./
COPY src ./src
COPY wasm ./wasm
COPY cli ./cli
COPY core ./core
COPY lib ./lib
COPY server ./server
COPY storage ./storage

RUN cargo build --release --bin term-challenge-server

# Runtime stage
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/target/release/term-challenge-server /usr/local/bin/term-challenge-server

RUN mkdir -p /data && chmod 755 /data

ENV RUST_LOG=info,term_challenge_server=debug
ENV CHALLENGE_HOST=0.0.0.0
ENV CHALLENGE_PORT=8080
ENV DATABASE_PATH=/data

EXPOSE 8080

HEALTHCHECK --interval=10s --timeout=5s --start-period=15s --retries=6 \
    CMD curl -f http://localhost:8080/health || exit 1

COPY tests/docker/entrypoint-test.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
